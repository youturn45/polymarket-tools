# Top Bidder Settings
POLL_INTERVAL=3
ENABLE_TOP_BIDDER=true

# Risk Limits
MAX_POSITION_SIZE=5000
MAX_TOTAL_EXPOSURE=10000
MAX_DAILY_LOSS=500

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log
